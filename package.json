{
  "name": "document-management-backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint --fix",
    "test": "pnpm with-test-env jest --detectOpenHandles -i --logHeapUsage --forceExit --config jest.config.js",
    "test:build": "tsc --build tsconfig.spec.json",
    "test:only": "pnpm with-test-env jest --no-coverage --detectOpenHandles --logHeapUsage --forceExit -i --config jest.config.js",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "with-test-env": "dotenv -e ./test/.env --",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "migrate:generate": "typeorm-ts-node-commonjs migration:generate ./src/migrations/Refactor -d ./src/config/typeorm.config.ts",
    "migrate:run": "DEBUG=typeorm:*  typeorm-ts-node-commonjs migration:run -d ./src/config/typeorm.config.ts",
    "migrate:create": "typeorm-ts-node-commonjs migration:create ./src/migrations/PostRefactoring",
    "migrate:revert": "DEBUG=typeorm:*  typeorm-ts-node-commonjs migration:revert -d ./src/config/typeorm.config.ts"
  },
  "dependencies": {
    "@nestjs/common": "^11.1.3",
    "@nestjs/core": "^11.1.3",
    "@nestjs/platform-express": "^11.1.3",
    "@nestjs/typeorm": "^11.0.0",
    "dotenv": "^16.5.0",
    "pg": "^8.16.2",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "typeorm": "^0.3.25",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@eslint/compat": "^1.3.1",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.29.0",
    "@nestjs/cli": "^11.0.7",
    "@nestjs/schematics": "^11.0.5",
    "@nestjs/testing": "^11.1.3",
    "@swc/cli": "^0.7.7",
    "@swc/core": "^1.12.6",
    "@types/dotenv": "^8.2.3",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.4",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.35.0",
    "@typescript-eslint/parser": "^8.35.0",
    "dotenv-cli": "^8.0.0",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsdoc": "^51.2.3",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-prettier": "^5.5.0",
    "globals": "^16.2.0",
    "jest": "^30.0.2",
    "prettier": "^3.6.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.1.1",
    "ts-jest": "^29.4.0",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.35.0"
  }
}
